{
  "AWSEBDockerrunVersion": "2",
  "volumes": [
    {
      "name": "efs",
      "host": {
        "sourcePath": "/efs"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nifi",
      "image": "apache/nifi:1.6.0",
      "essential": true,
      "memory": 10240,
      "mountPoints": [
        {
          "sourceVolume": "efs",
          "containerPath": "/opt/nifi/certs"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        },
        {
          "hostPort": 80,
          "containerPort": 9090
        }
      ]
    }
  ]
}
